<!DOCTYPE html>

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Todo List</title>
  <!-- CSS only -->
  {{!-- Change to use bootswatch Darkly theme--}}
  <link href="https://bootswatch.com/5/darkly/bootstrap.min.css" rel="stylesheet" crossorigin="anonymous">
</head>

<body class="bg-light">
  <header>
    <nav class="navbar navbar-dark bg-dark justify-content-round" style="padding: 8px 16px">
      <a class="navbar-brand" href="/">
      {{#if isAuthenticated}} {{user.name}}'s {{/if}}
      Todo List
      </a>
      {{#if isAuthenticated}}
      <a href="/users/logout" class="btn btn-outline-light">Logout</a>
      {{else}}
      <a href="/users/login" class="btn btn-outline-light">Login</a>
      {{/if}}
      {{!-- <a class="btn btn-outline-light" href="/todos/new">Create</a> --}}
    </nav>
  </header>
  <main>
    <div class="container mt-3">
      {{{ body }}}
    </div>
  </main>
  <!-- JavaScript Bundle with Popper -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3" crossorigin="anonymous"></script>
</body>

</html>